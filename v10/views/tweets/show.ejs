<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="thumbnail">
                <h4><a><%=tweet.str%></a></h4>
                <div class="caption-full">
                    <h4 class="pull-right">time stamp</h4>
                     <p>
                        <em>Submitted By<strong> <%= tweet.author.username %></strong></em>
                    </p>
                    <% if(currentUser && tweet.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/tweets/<%= tweet._id %>/edit">Edit</a>
                        <form id="delete-form" action="/tweets/<%= tweet._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/tweets/<%= tweet._id %>/retweets/new">Add Retweet</a>
                </div>
                <hr>
                <% tweet.retweets.forEach(function(retweet){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= retweet.author.username  %></strong>
                            <span class="pull-right">time stamp</span>
                            <p>
                                <%= retweet.text %> 
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>