<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= tweet.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/tweets/<%= tweet._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="tweet[name]" value="<%= tweet.name %>" readonly="readonly">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="tweet[str]" value="<%= tweet.str %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/tweets">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>